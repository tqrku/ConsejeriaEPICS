@model ConsejeriaEPICS.Models.Usuario

@{
    ViewData["Title"] = "Formulario de Registro";
}

<br>


<section class="contact-box" style="background-color: white" >
    <div class="row no-gutters bg-dark">
        <div class="col-xl-5 col-lg-12 register-bg">
        </div>
        <div class="col-xl-7 col-lg-12 d-flex">
             <div class="container align-self-center p-6" >
                 <h1 class="font-weight-bold mb-3" style="color: black;">Completa el formulario de Registro</h1>
                 <br>
                
                 <form asp-action="Registrar" asp-controller="Login" method="post">
              
                     <div class="form-group mb-3">
                         <label  class="font-weight-bold" style="color: black;">Email:<span class="text-danger">*</span></label>
                         <input type="text"  style="background-color: #910222;color:white" class="form-control" asp-for="Correo" required />
                          <span  class="text-danger"></span>
                     </div>
                     <br>
                     <div class="form-group mb-3">
                        <label  class="font-weight-bold" style="color: black;">Contraseña:<span class="text-danger">*</span></label>
                        <br>
                        <input type="password" class="form-control"  style="background-color: #910222;color:white" asp-for="Correo" required />
                         <span class="text-danger"></span>
                     </div>
                     <br>
                     <div class="form-group mb-3">
                         <label  class="font-weight-bold" style="color: black;">Nombres:<span class="text-danger">*</span></label>
                         <input type="text"  style="background-color: #910222;color:white" class="form-control" asp-for="Correo" required />
                          <span class="text-danger"></span>
                     </div>
                     <br>
                      <div class="form-group mb-3">
                        <label class="font-weight-bold" style="color: black;">Apellidos:<span class="text-danger">*</span></label>
                        <input type="text"  style="background-color: #910222;color:white" class="form-control" asp-for="Apellido" required />
                         <span  class="text-danger"></span>
                      </div>
                     <br>
                     <div class="form-group mb-3">
                        <label class="font-weight-bold" style="color: black;">Código de Alumno:<span class="text-danger">*</span></label>
                        <input type="text"  style="background-color: #910222;color:white"  class="form-control" asp-for="ID" required />
                         <span  class="text-danger"></span>
                     </div>
                     <br>
                     <div class="form-group mb-3">
                        <label class="font-weight-bold" style="color: black;">DNI<span class="text-danger">*</span></label>
                        <input type="text" style="background-color: #910222;color:white"  class="form-control" asp-for="DNI" required />
                         <span  class="text-danger"></span>
                     </div>
                     <br>
                   <div style="text-align: center;">
                               <button type="submit" class="get-started-btn scrollto" style="border-radius: 50px;margin:20px">Regístrar</button>
                   </div>
             
                 </form>
             </div>
        </div>
    </div>
</section>
