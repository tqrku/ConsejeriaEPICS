@{
    ViewData["Title"] = "Consejero";
}

 <section id="hero2" class="d-flex justify-content-center align-items-center">
    <div class="container position-relative" data-aos="zoom-in" data-aos-delay="100">

      <h1>Bienvenido Consejero<br></h1>
      <h1>De Ingenieria de Computación y Sistemas</h1>
    </div>
  </section>
 
 <section id="services" class="services section-bg">
    <div class="container">

      <div class="section-title">
        <h2 data-aos="fade-in">Funcionalidades del Consejero</h2>
        <p data-aos="fade-in" style="color: black;">Elige una de las funciones de acuerdo a tu necesidad</p>
      </div>

      <div class="row">
        <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-right">
          <div class="card">
            <div class="card-img">
              <img src="~/img/pendientes.png" alt="...">
            </div>
            <div class="card-body">
              <h5 class="card-title"><a asp-controller="Consejeria" asp-action="Pendiente" >Requerimientos Pendientes</a></h5>
              <p class="card-text"> Visualiza todos los requerimientos que faltan ser atendidos</p>
            </div>
          </div>
        </div>
        <div class="col-md-6   d-flex align-items-stretch" data-aos="fade-left">
          <div class="card">
            <div class="card-img">
              <img src="~/img/proceso.png " alt="...">
            </div>
            <div class="card-body">
              <h5 class="card-title"><a asp-controller="Consejeria" asp-action="Procesado" >Requerimientos en proceso</a></h5>
              <p class="card-text">Visualiza todos los requerimientos que estan en proceso</p>
        
            </div>
          </div>
          </div>
    </div>

 <div class="row">
        <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-right">
          <div class="card">
            <div class="card-img">
              <img src="~/img/terminados.png" alt="...">
            </div>
            <div class="card-body">
              <h5 class="card-title"><a asp-area="" asp-controller="Consejeria" asp-action="Terminado">Requerimientos Terminados</a></h5>
              <p class="card-text">Visualiza todos los requerimientos que ya estan finalizados</p>
            </div>
          </div>
        </div>

        <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-left">
          <div class="card">
            <div class="card-img">
              <img src="~/img/reportes.png" alt="...">
            </div>
            <div class="card-body">
              <h5 class="card-title"><a asp-area="" asp-controller="Listado" asp-action="Reportes">Reportes</a></h5>
              <p class="card-text">Visualiza todos los requerimientos atendidos según su categoría</p>
            </div>
          </div>
        </div>
  </div>




  </section>